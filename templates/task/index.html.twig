{% extends 'base.html.twig' %}

{% block title %}Tasks{% endblock %}

{% block body %}
    <h1>My tasks</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Head</th>
                <th>About</th>
                <th>Status</th>
                <th>End time</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for task in tasks %}
            <tr>
                <td>{{ task.head }}</td>
                <td>{{ task.about }}</td>
                <td>{{ task.status.value }}</td>
                <td>{{ task.endTime ? task.endTime|date('d-m-Y H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_task_show', {'id': task.id}) }}">show</a>
                    <a href="{{ path('app_task_edit', {'id': task.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_task_new') }}">Create new</a>
{% endblock %}
